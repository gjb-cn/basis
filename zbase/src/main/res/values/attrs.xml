<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="round_corner" format="integer|dimension" />
    <attr name="stroke_color" format="color|reference" />
    <attr name="stroke_width" format="integer|dimension" />

    <declare-styleable name="RoundLayoutAttr">
        <!--圆角弧度-->
        <attr name="round_corner" />
        <!--边框颜色-->
        <attr name="stroke_color" />
        <!--边框宽度-->
        <attr name="stroke_width" />
    </declare-styleable>

    <declare-styleable name="FixTextView">
        <!--是否使用TextView默认的处理，默认为false-->
        <attr name="useDefault" format="boolean"/>
        <!--结尾显示的文字内容-->
        <attr name="foldText" format="string"/>
        <!--结尾文字颜色-->
        <attr name="foldTextColor" format="color"/>
        <!--是否执行展开收起的逻辑-->
        <attr name="isAutoFold" format="boolean"/>
        <!--收起的文字行数-->
        <attr name="foldLines" format="integer"/>
        <!--是否执行收起操作-->
        <attr name="isUnFold" format="boolean"/>
        <!--收起文字-->
        <attr name="unFoldText" format="string"/>
        <!--收起文字颜色-->
        <attr name="unFoldTextColor" format="color"/>
        <!--文本内容-->
        <attr name="sourceText" format="string"/>
        <!--行间距-->
        <attr name="lineSpace" format="dimension"/>
        <attr name="isClick" format="boolean"/>
    </declare-styleable>
    <!--//输入框输入状态颜色
    //输入框未输入状态颜色
    //输入线颜色
    //文本颜色
    //间隔
    //子View宽
    //子View高
    //文本大小
    //输入线条大小
    //是否显示输入线
    //密码输入显示内容
    -->
    <!--密码输入layout-->
    <declare-styleable name="PassWordLayoutStyle">
        <attr name="box_input_color" format="reference"></attr>
        <attr name="box_no_input_color" format="reference"></attr>
        <attr name="input_line_color" format="reference"></attr>
        <attr name="text_input_color" format="reference"></attr>
        <attr name="interval_width" format="dimension"></attr>
        <attr name="item_width" format="dimension"></attr>
        <attr name="item_height" format="dimension"></attr>
        <attr name="draw_txt_size" format="dimension"></attr>
        <attr name="draw_box_line_size" format="dimension"></attr>
        <attr name="is_show_input_line" format="boolean"></attr>
        <attr name="pass_inputed_type">
            <flag name="circle" value="0" />
            <flag name="stars" value="1" />
            <flag name="text" value="2" />
        </attr>
        <attr name="box_draw_type">
            <flag name="rect" value="0" />
            <flag name="circle" value="1" />
            <flag name="line" value="2" />
        </attr>
        <attr name="pass_leng">
            <flag name="four" value="4" />
            <flag name="six" value="6" />
            <flag name="eight" value="8" />
        </attr>
    </declare-styleable>
</resources>